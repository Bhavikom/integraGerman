<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/EditText_bg"
            android:id="@+id/linearLayoutProjectActivityList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1.2">

                <TextView
                    android:id="@+id/labelProjectActivityDate"
                    style="@style/TextView_Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"

                    android:text="Date"
                    android:layout_marginLeft="0dp" />
                <ImageView

                    android:layout_marginLeft="2dp"
                    android:id="@+id/imageSortDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="2">

                <TextView
                    android:id="@+id/labelProjectActivityDesignation"
                    style="@style/TextView_Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Designation"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp" />
                <ImageView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/imageSortDesination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="2">

                <TextView
                    android:id="@+id/labelProjectActivityRealized"
                    style="@style/TextView_Black"
                    android:layout_width="wrap_content"
                    android:padding="0dp"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:gravity="right"
                    android:text="Realized" />
                <ImageView
                    android:layout_marginLeft="2sp"
                    android:id="@+id/imageSortRealized"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="#777777" />

            <LinearLayout
                style="@style/padding_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listViewProjectActivityList"
                   android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:choiceMode="singleChoice"
                    android:listSelector="@drawable/listitem_selector"></ListView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutProjectActivityListNote"
            style="@style/padding_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:minHeight="250dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelProjectActivityMemo"
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="Memo"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/textProjectActivityNotes"
                style="@style/EditText_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:minLines="3" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>