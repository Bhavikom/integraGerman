<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/padding_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/project_activity_row_height">

            <TextView
                android:id="@+id/labelProjectActivityDetailActivity"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.350"
                android:text="Type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.9"
                android:background="@drawable/white_border_click">

                <Spinner
                    android:id="@+id/spinnerProjectActivityActivityType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/padding_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/project_activity_row_height">

            <TextView
                android:id="@+id/labelProjectActivityDetailTopic"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.350"
                android:text="Topic"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.9"
                android:background="@drawable/white_border_click">

                <Spinner
                    android:id="@+id/spinnerProjectActivityActivityTopic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            style="@style/padding_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/project_activity_row_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelProjectActivityDetailStartDate"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.350"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <EditText

                    android:id="@+id/labelProjectActivityStartDate"
                    style="@style/EditText_bg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:editable="false"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="" />


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75">

                    <ImageButton
                        android:scaleType="fitXY"
                        android:id="@+id/imageButtonProjectActivityStartDate"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:src="@drawable/icn_date" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/padding_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/project_activity_row_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelProjectActivityDetailStartTime"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.350"
                android:text="Start Time "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <EditText

                    android:gravity="center"
                    android:id="@+id/labelProjectActivityStartTime"
                    style="@style/EditText_bg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:editable="false"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75">
                <ImageButton
                    android:scaleType="fitXY"
                    android:id="@+id/imageButtonStartTime"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:src="@drawable/time" />
                </LinearLayout>






        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            style="@style/padding_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/project_activity_row_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelProjectActivityDetailEndTime"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.350"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <EditText
                    android:gravity="center"
                    android:id="@+id/labelProjectActivityEndTime"
                    style="@style/EditText_bg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:editable="false"

                    android:singleLine="true"
                    android:text="" />


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75">

                    <ImageButton
                        android:scaleType="fitXY"
                        android:id="@+id/imageButtonEndTime"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:src="@drawable/time" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        style="@style/padding_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/project_activity_row_height"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/labelProjectActivityDetailOffer"
            style="@style/TextView_Black_Right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.400"
            android:text="Offer"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.60"
            android:background="@drawable/white_border_click">

            <Spinner
                android:id="@+id/spinnerProjectActivityOffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />
        </LinearLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.40" />
    </LinearLayout>

    <LinearLayout
        style="@style/padding_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/project_activity_row_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelProjectActivityDetailKunde"
            style="@style/TextView_Black_Right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.350"
            android:text="Kunde"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textViewProjectActivityKunde"
                style="@style/EditText_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:gravity="left|center"
                android:singleLine="true"
                android:text=""></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/buttonAddProjectActivityKunde"
                    style="@style/ImageView_bg_2dpcorner_2dpmargin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="10dp"
                    android:src="@drawable/icn_help" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/padding_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/project_activity_row_height"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelProjectActivityDetailRealized"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.350"
                android:text="Realized"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="-5dp">

                        <CheckBox
                            android:id="@+id/checkBoxProjectActivityRealized"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_bg" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/labelProjectActivityDetailFixedTimes"
                        style="@style/TextView_Black_Right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="Fixed times"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4">

                        <CheckBox
                            android:id="@+id/checkBoxProjectActivityFixedTimes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:button="@drawable/checkbox_bg" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

