    <LinearLayout
        style="@style/padding_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/project_activity_row_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelProjectActivityDetailContacts"
            style="@style/TextView_Black_Right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.350"
            android:text="Contacts"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp">


            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="40dp"
                android:background="@drawable/white_border">
                <ListView
                    android:id="@+id/listProjectActivityContacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:choiceMode="singleChoice"
                    android:minHeight="40dp"
                    android:listSelector="@drawable/listitem_selector"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/buttonAddProjectActivityContacts"
                    style="@style/ImageView_bg_2dpcorner_2dpmargin"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="10dp"
                    android:src="@drawable/icn_add" />

                <ImageButton
                    android:id="@+id/buttonRemoveProjectActivityContacts"
                    style="@style/ImageView_bg_2dpcorner_2dpmargin"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="10dp"
                    android:src="@drawable/icn_minus" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/padding_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/project_activity_row_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelProjectActivityDetailEmployee"
            style="@style/TextView_Black_Right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.350"
            android:text="Contacts"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="40dp"
                android:background="@drawable/white_border">
                <ListView
                    android:id="@+id/listViewProjectActivityEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:choiceMode="singleChoice"
                    android:minHeight="40dp"
                    android:listSelector="@drawable/listitem_selector"/>


            </LinearLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/buttonAddProjectActivityEmployee"
                    style="@style/ImageView_bg_2dpcorner_2dpmargin"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="10dp"
                    android:src="@drawable/icn_add" />

                <ImageButton
                    android:id="@+id/buttonRemoveProjectActivityEmployee"
                    style="@style/ImageView_bg_2dpcorner_2dpmargin"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="10dp"
                    android:src="@drawable/icn_minus" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

