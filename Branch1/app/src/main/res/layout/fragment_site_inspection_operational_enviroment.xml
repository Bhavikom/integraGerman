<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/site_inspection_operational_enviroment"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelAccessObstruction"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:text="Access Obstruction" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:gravity="left">

                <ToggleButton
                    android:id="@+id/button1"
                    style="@style/TextView_White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_selector"
                    android:checked="true"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelWhich"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:text="Which" />

            <EditText
                android:id="@+id/textWhich"
                style="@style/EditText_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.62"
                android:maxLength="50"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/site_inspection_operational_enviroment"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelDisclaimer"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:text="Disclaimer" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:gravity="left">

                <ToggleButton
                    android:id="@+id/button2"
                    style="@style/TextView_White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_selector"
                    android:checked="true"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelFor"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:text="For" />

            <EditText
                android:id="@+id/textFor"
                style="@style/EditText_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.62"
                android:imeOptions="actionNext"
                android:maxLength="50"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/site_inspection_operational_enviroment"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelAccessForest"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:text="Access Forest /Dirt Road" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:gravity="left">

                <ToggleButton
                    android:id="@+id/button3"
                    style="@style/TextView_White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_selector"
                    android:checked="true"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:layout_marginLeft="10sp"
                android:background="@drawable/white_border"
                android:orientation="vertical">
                <TextView
                    android:textSize="@dimen/textview_font_size"
                    android:id="@+id/labelPracticability"
                    style="@style/TextView_Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.06"
                    android:gravity="top"
                    android:text="Practicability:" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"

                    android:orientation="horizontal">


                <CheckBox
                    android:textSize="@dimen/textview_font_size"
                    android:id="@+id/labelSummer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.06"
                    android:button="@null"
                    android:drawableLeft="@drawable/checkbox_bg"
                    android:paddingLeft="-5dp"
                    android:text="Summer" />

                <CheckBox
                    android:textSize="@dimen/textview_font_size"
                    android:id="@+id/labelWinter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.06"
                    android:button="@null"
                    android:drawableLeft="@drawable/checkbox_bg"
                    android:text="Winter" />

                <CheckBox
                    android:textSize="@dimen/textview_font_size"
                    android:id="@+id/labelWetness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.06"
                    android:button="@null"
                    android:drawableLeft="@drawable/checkbox_bg"
                    android:text="Wetness" />


            </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:textSize="@dimen/textview_font_size"
                        android:id="@+id/labelOther"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="0.07"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkbox_bg"
                        android:text="Sonstige" />

                    <EditText
                        android:id="@+id/textOther"
                        style="@style/EditText_bg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="0.14"
                        android:imeOptions="actionNext"
                        android:maxLength="50"
                        android:paddingLeft="15dp"
                        android:singleLine="true" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/site_inspection_operational_enviroment"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelAccessLying"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1550"
                android:text="Access laying [m]" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.20">

                <EditText
                    android:id="@+id/textAccessLying"
                    style="@style/EditText_bg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:singleLine="true" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=" [m]"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.18">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.18"
                        android:gravity="right">

                        <CheckBox
                            android:textSize="@dimen/textview_font_size"
                            android:id="@+id/labelperformWorkLabels"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:button="@null"
                            android:drawableLeft="@drawable/checkbox_bg"
                            android:minWidth="128dp"
                            android:paddingLeft="-5dp"
                            android:text="Schalttafeln" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30">

                        <EditText
                            android:id="@+id/textStk"
                            style="@style/EditText_bg"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:digits="1234567890"
                            android:hint="Stk."
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:singleLine="true" />

                        <TextView
                            android:textSize="@dimen/textview_font_size"
                            android:id="@+id/labelStk"
                            style="@style/TextView_Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:text="Stk." />

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:textSize="@dimen/textview_font_size"

                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.0230"
                android:text="Access laying [m]" />
            <LinearLayout
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.0435">

                <CheckBox
                    android:textSize="@dimen/textview_font_size"
                    android:id="@+id/LabelDrivingPlates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/checkbox_bg"
                    android:text="Driving plates" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10">

                <CheckBox
                    android:textSize="@dimen/textview_font_size"
                    android:id="@+id/labelBongossiPlates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/checkbox_bg"
                    android:paddingLeft="2dp"
                    android:text="Bongossi plates" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/padding_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/site_inspection_operational_enviroment"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelDirections"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:text="Directions" />

            <EditText
                android:id="@+id/textDirections"
                style="@style/EditText_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.86"
                android:maxLength="300" />
        </LinearLayout>

        <LinearLayout
            style="@style/padding_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/site_inspection_operational_enviroment"
            android:orientation="horizontal">

            <CheckBox
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelPublicRoadCountry"
                style="@style/padding_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/checkbox_bg"
                android:text="Public Road Country" />

            <CheckBox
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelPrivateProperty"
                style="@style/padding_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:button="@null"
                android:drawableLeft="@drawable/checkbox_bg"
                android:text="Private Property" />

            <CheckBox
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelInterior"
                style="@style/padding_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:button="@null"
                android:drawableLeft="@drawable/checkbox_bg"
                android:text="Interior" />

            <CheckBox
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelOutdoor"
                style="@style/padding_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/checkbox_bg"
                android:text="Outdoor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/site_inspection_operational_enviroment"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelVerdSewers"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:text="Verd. sewers" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:gravity="left">

                <ToggleButton
                    android:id="@+id/button4"
                    style="@style/TextView_White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_selector"
                    android:checked="true"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelLoadAccess"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="right"
                android:text="Load Access [t]" />

            <EditText
                android:id="@+id/textLoadAccess"
                style="@style/EditText_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.62"
                android:digits="0123456789.,"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="15"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="[t]"
                android:textSize="16sp" />



        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelLoadStand"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.240"
                android:gravity="right"
                android:text="Load Stand [t]" />

            <EditText
                android:id="@+id/textLoadText"
                style="@style/EditText_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:digits="0123456789.,"
                android:hint="0,00"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="15"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="[t]"
                android:textSize="16sp" />
            <View
                android:layout_weight="0.5"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/site_inspection_operational_enviroment"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelMaxTrafficLoad"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1250"
                android:text="Max. Traffic load" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textMaxTrafficLoad"
                    style="@style/EditText_bg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:digits="0123456789.,"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:singleLine="true" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=" [kg / m2]"
                    android:textSize="16sp" />
            </LinearLayout>


            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelAdditionalSupportingMaterial"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="right"
                android:text="Additional supporting material:" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:gravity="left">

                <ToggleButton
                    android:id="@+id/button5"
                    style="@style/TextView_White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_selector"
                    android:checked="true"

                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <EditText
                android:id="@+id/textLoadStand"
                style="@style/EditText_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.13"
                android:imeOptions="actionNext"
                android:maxLength="30"
                android:singleLine="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/site_inspection_operational_enviroment"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelUndergroundStand"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:text="Underground Stand" />

            <EditText
                android:id="@+id/textUndergroundStand"
                style="@style/EditText_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.46"
                android:hint=""
                android:imeOptions="actionNext"
                android:maxLength="50"
                android:singleLine="true" />

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelRoadGrade"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.17"
                android:gravity="center|right"
                android:text="Road grade [%]" />

            <EditText
                android:id="@+id/textRoadGrade"
                style="@style/EditText_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.115"
                android:digits="0123456789.,"
                android:hint="0,00"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="15"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="[%]"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/site_inspection_operational_enviroment"

            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/textview_font_size"
                android:id="@+id/labelNotices"
                style="@style/TextView_Black_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:gravity="right|top"
                android:text="Notices" />

            <EditText
                android:id="@+id/textNotices"
                style="@style/EditText_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.86"
                android:gravity="left|top"
                android:hint=""
                android:maxLength="1000"
                android:minLines="4" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>