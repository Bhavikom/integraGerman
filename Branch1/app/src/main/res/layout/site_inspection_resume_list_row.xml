<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="80sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelDate"
        android:maxEms="7"
        android:minEms="7"
        style="@style/listItem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelZipCode"
        android:maxEms="6"
        android:minEms="6"
        style="@style/listItem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelPlace"
        android:maxEms="7"
        android:minEms="7"
        style="@style/listItem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelRoad"
        android:maxEms="7"
        android:minEms="7"
        style="@style/listItem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelKunde"
        android:maxEms="7"
        android:minEms="7"
        style="@style/listItem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelMatchCode"
        android:maxEms="8"
        android:minEms="8"
        style="@style/listItem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelLongitude"
        android:maxEms="10"
        android:minEms="10"
        style="@style/listItem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelLatitude"
        android:maxEms="10"
        android:minEms="10"
        style="@style/listItem"/>
</LinearLayout>
</LinearLayout>