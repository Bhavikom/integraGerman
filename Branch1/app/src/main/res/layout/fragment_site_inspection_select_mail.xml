<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelSiteInspectionBranch"
                    style="@style/TextView_Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinnerSiteInspectionMailBranch"
                    style="@style/Spinner_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>
            <View
                android:layout_weight="0.5"
                android:layout_width="0sp"
                android:layout_height="100sp"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/checkBoxSentMailToEmployeeAdress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="An eigene email-address send"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelSiteInspectionEmailAddress"
                style="@style/TextView_Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textSize="20sp"
                android:layout_marginTop="10sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/labelInspectionMailSelectionSelectMailId"
                    style="@style/padding_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:button="@drawable/checkbox_bg"
                    android:gravity="center_vertical"
                    android:text="Select"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/labelSiteInspectionMailSelectionEmailAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="Email Address"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/labelSiteInspectionMailSelectionEmailDesignation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="Desgination"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1">


                <ListView
                    android:id="@+id/listViewSiteInspectionbranchMailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/labelEmailBodyContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/textEmailBodyContent"
                    style="@style/EditText_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|top"
                    android:hint=""
                    android:maxLength="1000"
                    android:minLines="4" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>