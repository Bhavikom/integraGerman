<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/padding_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="0sp"
            android:id="@+id/labelAgendaCustomerDetails"
            style="@style/TextView_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Details" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/textAgendaCustomerDetails"
                style="@style/EditText_bg_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="4"
                android:lines="4" />

            <LinearLayout
                android:layout_marginTop="@dimen/ten_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="0sp">

                <Button
                    android:id="@+id/buttonCustomerDetails"
                    style="@style/Button_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/padding_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="0sp"
            android:id="@+id/labelAgendaProjectDetails"
            style="@style/TextView_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Details" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/textAgendaProjectDetails"
                style="@style/EditText_bg_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="4"
                android:lines="4" />

            <LinearLayout
                android:layout_marginTop="@dimen/ten_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buttonProjectDetails"
                    style="@style/Button_bg"
                    android:layout_marginLeft="0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/padding_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelAgendaOfferDetails"
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer Details" />

            <EditText
                android:id="@+id/textAgendaOfferDetails"
                style="@style/EditText_bg_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5" />

        </LinearLayout>

        <LinearLayout
            style="@style/padding_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelAgendaNotice"
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notice" />

            <EditText
                android:id="@+id/textAgendaNotice"
                style="@style/EditText_bg_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/padding_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelAgendaActivityStartTime"
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Details" />

            <EditText
                android:id="@+id/textAgendaActivityStartTime"
                style="@style/EditText_bg_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            style="@style/padding_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelAgendaActivityEndTime"
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Details" />

            <EditText
                android:id="@+id/textAgendaActivityEndTime"
                style="@style/EditText_bg_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/padding_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelAgendaTodayEmployee"
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee" />

            <LinearLayout

                style="@style/EditText_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp">

                <ListView
                    android:id="@+id/listViewAgendaEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/padding_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelAgendaTodayContacts"
                style="@style/TextView_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts" />

            <LinearLayout
                style="@style/EditText_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp">

                <ListView
                    android:id="@+id/listViewAgendaContacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:minHeight="40dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>