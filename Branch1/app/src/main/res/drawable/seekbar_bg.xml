<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:bottomLeftRadius="10px" android:topLeftRadius="10px" android:topRightRadius="10px" android:bottomRightRadius="10px"/>
            <gradient android:startColor="@color/dark_grey" android:endColor="@color/dark_grey" android:angle="-90.0" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape >

                <corners android:bottomLeftRadius="10px" android:topLeftRadius="10px" android:topRightRadius="10px" android:bottomRightRadius="10px"/>
                <gradient android:startColor="@color/dark_grey" android:endColor="@color/dark_grey" android:angle="-90.0" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:bottomLeftRadius="10px" android:topLeftRadius="10px" android:topRightRadius="10px" android:bottomRightRadius="10px"/>
                <gradient android:startColor="@color/red" android:endColor="@color/red" android:centerColor="@color/red" android:angle="90.0" />
            </shape>
        </clip>
    </item>
</layer-list>