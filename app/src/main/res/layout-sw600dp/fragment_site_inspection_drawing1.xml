<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"></FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageviewColor"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white_border_click"
            android:src="@drawable/icn_color_selection"/>

        <ImageView
            android:id="@+id/imageviewClear"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icn_cancel"
            android:background="@drawable/white_border_click"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/imageviewUndo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/white_border_click"
            android:src="@drawable/icn_undo"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</RelativeLayout>
