<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/labelNL"
                style="@style/listItemHeader"
                android:layout_width="wrap_content"
                android:ems="7"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelErstellt_am"
                style="@style/listItemHeader"
                android:layout_width="wrap_content"
                android:ems="14"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelHohengruppe"
                style="@style/listItemHeader"
                android:layout_width="wrap_content"
                android:ems="14"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelGeraetetyp"
                style="@style/listItemHeader"
                android:layout_width="wrap_content"
                android:ems="14"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelMietdauer"
                style="@style/listItemHeader"
                android:layout_width="wrap_content"
                android:ems="7"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelMietpreis"
                style="@style/listItemHeader"
                android:layout_width="wrap_content"
                android:ems="7"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelVersicherung"
                style="@style/listItemHeader"
                android:layout_width="wrap_content"
                android:ems="7"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelAbsagegrund"
                style="@style/listItemHeader"
                android:layout_width="wrap_content"
                android:ems="14"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <ListView
                android:id="@+id/listViewCustomerLostSale"
                style="@style/EditText_customer_search_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:choiceMode="singleChoice"></ListView>

        </LinearLayout>

    </HorizontalScrollView>





</LinearLayout>