<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/dark_grey</item>
        <!-- Tab  -->
        <item name="android:actionBarTabStyle">@style/MainActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@style/MainActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorLink">@color/primary_dark</item>
        <item name="android:textColorHighlight">@color/primary_dark</item>

        <!-- /Tab  -->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
        <item name="colorAccent">#000000</item>
        <item name="colorControlNormal">@color/dark_grey</item>
        <!-- Tab  -->
        <item name="android:actionBarTabStyle">@style/MainActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@style/MainActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorLink">#000000</item>
        <item name="android:textColorHighlight">#000000</item>

        <!-- /Tab  -->
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/text_primary</item>
    </style>
    <style name="MyActionButtonStyle" parent="AppTheme">
        <item name="android:minWidth">60dip</item>
        <item name="android:padding">0dip</item>
    </style>
    <color name="photo_tint">#ffff0000</color>
    <color name="primary">#ffffff</color>
    <color name="primary_dark">#ffff0000</color>
    <color name="primary_dark2">#ff669900</color>
    <color name="primary_dark3">#ff0099cc</color>
    <color name="accent">#ffff3061</color>
    <color name="text_primary">#e6000000</color>
    <color name="black">#ff000000</color>
    <color name="text_secondary">#99000000</color>
    <color name="accentColor">#a9512da8</color>
    <color name="navigationBarColor">#ffb6c4ee</color>
    <color name="lightBlue">#ff36c2f3</color>
    <color name="light_lightRed">#EF9A9A</color>
    <color name="red">#ffff0000</color>
    <color name="white">#ffffffff</color>
    <color name="darkRed">#ffff0038</color>
    <color name="bg_color">#f7f7f7</color>
    <color name="dark_grey">#ababab</color>
    <color name="gray">#e6e6e6</color>

    <style name="TextView_White">
