<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"></LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelSendDataToAdmin"
                    style="@style/TextView_Black_Comman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send data for analysis"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/labelSendDataForAnalysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Data For Analysis" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonSendDataToAdmin"
                    style="@style/Button_Common_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelForSupportCallHeading"
                    style="@style/TextView_Black_Comman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send data for analysis"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/labelForSupportCallInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Data For Analysis" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">

                <TextView
                    android:id="@+id/labelSupportPhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/imageViewCallSupport"
                    style="@style/ImageView_bg_2dpcorner_2dpmargin"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/icn_dial" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/dark_grey"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelForSupportEmailHeading"
                    style="@style/TextView_Black_Comman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send data for analysis"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/labelForSupportEmailInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Data For Analysis" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonSupportEmail"
                    style="@style/Button_Common_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelAppVersion"
                    style="@style/TextView_Black_Comman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="App Version"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/labelValueAppVersion"
                    style="@style/TextView_Black_Comman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="1.1.01" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"></LinearLayout>
</LinearLayout>