<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="10dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="@dimen/fourtee_sp">
        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelDate"
            android:maxEms="6"
            android:minEms="6"
            style="@style/listItemHeader"/>
        <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelZipCode"
            android:maxEms="6"
            android:minEms="6"
            style="@style/listItemHeader"/>
        <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelPlace"
            android:maxEms="7"
            android:minEms="7"
            style="@style/listItemHeader"/>
        <TextView
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelRoad"
            android:maxEms="7"
            android:minEms="7"
            style="@style/listItemHeader"/>
        <TextView
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelKunde"
            android:maxEms="7"
            android:minEms="7"
            style="@style/listItemHeader"/>
        <TextView
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelMatchCode"
            android:maxEms="6"
            android:minEms="6"
            style="@style/listItemHeader"/>
        <TextView
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelLongitude"
            android:maxEms="10"
            android:minEms="10"
            style="@style/listItemHeader"/>
        <TextView
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelLatitude"
            android:maxEms="10"
            android:minEms="10"
            style="@style/listItemHeader"/>
    </LinearLayout>
        <ListView

            android:id="@+id/listResume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/EditText_customer_search_bg">

        </ListView>
        </LinearLayout>
    </HorizontalScrollView>



</LinearLayout>

