<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selection"
    android:minHeight="@dimen/list_item_height_small"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextView_Black_Comman"
            android:id="@+id/labelListItemCustomerActivityDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right_xxxxsmall"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_weight="2.5" />

        <TextView
            style="@style/TextView_Black_Comman"
            android:id="@+id/labelListItemCustomerActivityType"
            android:layout_width="0dp"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right_xxxxsmall"
            android:layout_weight="4" />

        <CheckBox
            android:id="@+id/checkBoxCustomerActivityRealized"
            style="@style/padding_style"
            android:layout_width="wrap_content"
            android:enabled="false"
            android:focusable="false"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:focusableInTouchMode="false"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_bg"
            android:text="" />
    </LinearLayout>
</LinearLayout>
