                            max="3"
                            min="0"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                        <de.mateco.integrAMobile.Helper.CustomNumberPicker
