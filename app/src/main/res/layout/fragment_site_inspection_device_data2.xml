                            android:id="@+id/nPMaxLength3"
                            max="9"
                            min="0"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                        <de.mateco.integrAMobile.Helper.CustomNumberPicker
                            android:id="@+id/nPMaxLength4"
                            max="9"
                            min="0"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
