            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/labelWorkinhHeight"
                        style="@style/TextView_Black_Comman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Working Height"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:paddingLeft="@dimen/margin_left_right_xxsmall"
                        android:paddingRight="@dimen/margin_left_right_xxsmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <de.mateco.integrAMobile.Helper.CustomNumberPicker
                            android:id="@+id/nPWorkingHeight1"
                            max="1"
                            min="0"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                        <de.mateco.integrAMobile.Helper.CustomNumberPicker
                            android:id="@+id/nPWorkingHeight2"
                            max="9"
                            min="0"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                        <de.mateco.integrAMobile.Helper.CustomNumberPicker
                            android:id="@+id/nPWorkingHeight3"
                            max="9"
                            min="0"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/labelWorkinhHeight1"
                        style="@style/EditText_Comman_white_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_left_right_small"
                        android:layout_marginTop="@dimen/margin_left_right_xxxsmall"
                        android:gravity="center"
                        android:minWidth="125dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/labelLateralReach"
                        style="@style/TextView_Black_Comman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lateral Reach"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:paddingLeft="@dimen/margin_left_right_xxsmall"
                        android:paddingRight="@dimen/margin_left_right_xxsmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <de.mateco.integrAMobile.Helper.CustomNumberPicker
                            android:id="@+id/nPLateralReach1"
                            max="9"
                            android:layout_weight="1"
                            min="0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                        <de.mateco.integrAMobile.Helper.CustomNumberPicker
