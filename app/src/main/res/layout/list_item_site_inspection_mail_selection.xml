<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minHeight="48dp"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkBoxListItemSiteInspectionMailSelectionSelectMailId"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:enabled="false"
            android:focusable="false"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:focusableInTouchMode="false"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_bg"
            android:text="" />

        <TextView
            style="@style/TextView_Black_Comman"
            android:id="@+id/labelListItemSiteInspectionMailSelectionEmailAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_weight="4" />

        <TextView
            style="@style/TextView_Black_Comman"
            android:id="@+id/labelListItemSiteInspectionMailSelectionEmailDesignation"
            android:layout_width="0dp"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3" />
    </LinearLayout>



</LinearLayout>