<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selection"
    android:minHeight="@dimen/list_item_height_small"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/labelListItemDailyAgendaCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right_xxxxsmall"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/list_item_textsize_small"
            android:textColor="@android:color/black"
            android:layout_weight="3" />

        <CheckBox
            android:id="@+id/checkBoxCustomerActivityRealized"
            style="@style/padding_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:enabled="false"
            android:focusable="false"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:focusableInTouchMode="false"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_bg"
            android:text="" />

        <TextView
            android:id="@+id/labelListItemCustomerActivityType"
            android:layout_width="0dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right_xxxxsmall"
            android:textSize="@dimen/list_item_textsize_small"
            android:layout_weight="3" />


    </LinearLayout>
</LinearLayout>
