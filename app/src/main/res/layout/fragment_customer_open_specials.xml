<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelNL"
                    style="@style/listItemHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="3"
                    android:maxEms="3" />

                <TextView
                    android:id="@+id/labelAngebot"
                    style="@style/listItemHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="8"
                    android:maxEms="8"/>

                <TextView
                    android:id="@+id/labelErstellt_am"
                    style="@style/listItemHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="10"
                    android:maxEms="10" />

                <TextView
                    android:id="@+id/labelHohengruppe"
                    style="@style/listItemHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="12"
                    android:minEms="12" />

                <TextView
                    android:id="@+id/labelGeraetetyp"
                    style="@style/listItemHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="6"
                    android:maxEms="6"/>

                <TextView
                    android:id="@+id/labelAnzahlGeraete"
                    style="@style/listItemHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="6"
                    android:minEms="6" />

                <TextView
                    android:id="@+id/labelMietdauer"
                    style="@style/listItemHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="6"
                    android:maxEms="6" />

                <TextView
                    android:id="@+id/labelStaffel"
                    style="@style/listItemHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="18"
                    android:maxEms="18" />

                <TextView
                    android:id="@+id/labelPreis"
                    style="@style/listItemHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="5"
                    android:maxEms="5"/>

                <TextView
                    android:id="@+id/labelHaftb"
                    style="@style/listItemHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="6"
                    android:maxEms="6" />

                <TextView
                    android:id="@+id/labelStatus"
                    style="@style/listItemHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="12"
                    android:minEms="12" />

            </LinearLayout>

            <ListView
                android:id="@+id/listViewCustomerOpenSpecials"
                style="@style/EditText_customer_search_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:choiceMode="singleChoice"></ListView>
        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>