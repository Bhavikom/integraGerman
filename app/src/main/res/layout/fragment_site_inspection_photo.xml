<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_left_right_small"
    android:layout_marginRight="@dimen/margin_left_right_small"
    android:layout_marginLeft="@dimen/margin_left_right_small"
    android:orientation="vertical">

   <GridView
       android:id="@+id/gridPhoto"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.8"
       android:numColumns="3"></GridView>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_left_right_xxxsmall"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_gravity="right">
        <Button
            android:id="@+id/btnCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            style="@style/Button_Common_bg"/>
        <Button
            android:id="@+id/btnGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:layout_marginLeft="20dp"
            style="@style/Button_Common_bg"/>
        <Button
            android:id="@+id/btnDraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sketch"
            android:layout_marginLeft="20dp"
            style="@style/Button_Common_bg"/>
        </LinearLayout>

</LinearLayout>
