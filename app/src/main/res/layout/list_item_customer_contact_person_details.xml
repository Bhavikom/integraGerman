<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selection"
    android:minHeight="@dimen/list_item_height_big"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_left_right_xxxxsmall">

        <TextView
            android:textSize="@dimen/list_item_textsize_small"
            android:id="@+id/labelListItemCustomerContactPersonSalutation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.5" />

        <TextView
            android:textSize="@dimen/list_item_textsize_small"
            android:id="@+id/labelListItemCustomerContactPersonFirstName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_weight="2.5" />

        <TextView
            android:textSize="@dimen/list_item_textsize_small"
            android:id="@+id/labelListItemCustomerContactPersonFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_weight="2.5" />
    </LinearLayout>
</LinearLayout>
