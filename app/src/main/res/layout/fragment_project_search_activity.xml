<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/layoutLoadedCustomer"
        android:layout="@layout/list_item_customer_loaded" />

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_left_right_xxxxsmall"
            android:layout_weight="0.450">

            <include layout="@layout/list_project_activity" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/margin_left_right_xxxxsmall"
            android:layout_height="match_parent"
            android:layout_weight="0.550">

            <include layout="@layout/project_activity_detail" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
